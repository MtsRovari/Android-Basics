<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/fragment_left"
        android:name="com.example.mateusrovari.fragmentcompatibillity.LeftFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/fragment_left"/>

    <fragment
        android:id="@+id/fragment_rigth"
        android:name="com.example.mateusrovari.fragmentcompatibillity.RightFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/fragment_right"/>


</LinearLayout>